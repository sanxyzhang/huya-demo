{
  "name": "web-demo",
  "outputPath": "dist",
  "releasePath": "release",
  "ignore": [
    "*.md",
    "LICENSE",
    ".git/**",
    ".gitignore",
    "package-lock.json"
  ],
  "builder": {
    "name": "@hyext/builder-beyond",
    "config": {
      "webSDKVersion": "latest",
      "webTitle": "web_demo",
      "designWidth": 780,
      "https": true,
      "host": "localhost",
      "port": 18080,
      "enableLint": {
        "stylelint": false,
        "eslint": false
      },
      "useCssLoader": true,
      "buildConfig": {
        "RN": [
          {
            "entry": "index_streamer.js",
            "extType": "zs_anchor_panel",
            "platform": "app",
            "registerComponent": [
              "web-demo-streamer"
            ]
          },
          {
            "entry": "index_streamer.js",
            "extType": "zs_anchor_popup",
            "platform": "app",
            "registerComponent": [
              "web-demo-streamer"
            ]
          }
        ],
        "H5": [
          {
            "entry": "index_streamer.js",
            "extType": "pc_anchor_panel",
            "platform": "pc"
          },
          {
            "entry": "index.js",
            "extType": "web_video_com",
            "platform": "web"
          },
          {
            "entry": "index.js",
            "extType": "web_popup",
            "platform": "web"
          }
        ]
      }
    }
  }
}
